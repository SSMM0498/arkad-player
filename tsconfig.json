{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "build",
        "rootDir": "src",
        "lib": [
            "es6",
            "dom"
        ],
        "downlevelIteration": true
    },
    "compileOnSave": true,
    "exclude": [
        "test"
    ],
    "include": [
        "./src",
        "./src/_core"
    ]
}